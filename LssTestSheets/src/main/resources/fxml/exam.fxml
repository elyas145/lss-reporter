<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import org.controlsfx.control.textfield.CustomTextField?>

<Tab text="Untitled Tab" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Elyas.LssTestSheets.viewController.ExamController">
   <content>
      <HBox alignment="CENTER_LEFT" fillHeight="false">
         <children>
            <CustomTextField fx:id="txtYear" prefColumnCount="2" promptText="YY" HBox.hgrow="NEVER">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </CustomTextField>
            <CustomTextField fx:id="txtMonth" prefColumnCount="2" promptText="MM" HBox.hgrow="NEVER">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </CustomTextField>
            <CustomTextField fx:id="txtDay" prefColumnCount="2" promptText="DD" HBox.hgrow="NEVER" />
            <Separator orientation="VERTICAL" HBox.hgrow="NEVER">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Separator>
            <RadioButton fx:id="rdbOriginal" mnemonicParsing="false" selected="true" text="Original" HBox.hgrow="NEVER">
               <toggleGroup>
                  <ToggleGroup fx:id="exam1" />
               </toggleGroup>
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </RadioButton>
            <RadioButton fx:id="rdbRecert" mnemonicParsing="false" text="Recert" toggleGroup="$exam1" HBox.hgrow="NEVER">
               <padding>
                  <Insets left="5.0" />
               </padding>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </RadioButton>
            <Separator orientation="VERTICAL" HBox.hgrow="NEVER">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Separator>
            <CustomTextField fx:id="txtExamLocation" promptText="Exam Location" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </CustomTextField>
         </children>
         <padding>
            <Insets bottom="5.0" top="5.0" />
         </padding>
      </HBox>
   </content>
</Tab>
